<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/background_item_notify"
    android:orientation="vertical"
    android:padding="6dp">

    <nit.contact.views.TextViewComingSoon
        android:id="@+id/tvComingSoonItemNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Minh Hang"
        android:textColor="@color/green"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvComingSoonItemNotify"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvAvatarUserNotify"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="centerCrop"
            android:src="@drawable/minh_hang2" />

        <View
            android:id="@+id/viewLineOne"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/gray" />

        <nit.contact.views.TextViewComingSoon
            android:id="@+id/tvComingSoonItemDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="3"
            android:text="Xin chao minh hang, Tran thanh, Truong Giang, Hoai Linh, balabala....... hehe"
            android:textColor="@color/black" />


        <View
            android:id="@+id/viewLineTwo"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/gray" />

        <nit.contact.views.TextViewComingSoon
            android:id="@+id/tvComingSoonItemTypeNotifu"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Coming video call at 16h 3/2016"
            android:textColor="@color/black" />

    </LinearLayout>


</RelativeLayout>