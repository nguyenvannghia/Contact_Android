<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">

    <ImageView
        android:id="@+id/imvLogoSplashActivity"
        android:layout_width="230dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_logo_contact"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

    <nit.contact.views.GifMovieView
        android:id="@+id/gifLoadingSplashActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/vLoginSignupSplashActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvLogoSplashActivity"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="25dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <nit.contact.views.AutocompleteTextViewComingSoon
                android:id="@+id/atvEmailSplashActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:background="@drawable/selector_focused_while_to_yellow_light"
                android:hint="Email ..."
                android:padding="7dp"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <nit.contact.views.EditTextComingSoon
                android:id="@+id/edtDisplaynameSplashActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:background="@drawable/selector_focused_while_to_yellow_light"
                android:hint="Display name ..."
                android:padding="7dp"
                android:textSize="12sp"
                android:visibility="gone"
                tools:ignore="HardcodedText" />


            <EditText
                android:id="@+id/edtPasswordSplashActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_focused_while_to_yellow_light"
                android:hint="Password ..."
                android:inputType="textPassword"
                android:padding="7dp"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <nit.contact.views.TextViewComingSoon
                android:id="@+id/tvEvenSplashActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/selector_green_light_green_dark"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="@string/Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <nit.contact.views.TextViewComingSoon
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Login With"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvLoginFacebookSplashActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/selector_fb"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/tvLoginGoogleSplashActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/selector_gg"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/tvLoginTwitterSplashActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_tw"
                    android:clickable="true" />

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center|center_vertical"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <nit.contact.views.TextViewComingSoon
                    android:id="@+id/tvSwitchEvenSplashActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/selector_green_light_green_dark"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="@string/Sign_up"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </FrameLayout>


    </LinearLayout>
</RelativeLayout>
